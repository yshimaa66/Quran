<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbc"
    tools:context=".Fragment_Sbha">



    <TextView
        android:id="@+id/TextViewPrayerCounter"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colortext"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364">

    </TextView>

    <ImageView

        android:id="@+id/PrayerCounter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:scaleType="fitXY"
        android:src="@drawable/prayer_counter"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick"
        tools:layout_editor_absoluteX="0sp">

    </ImageView>

    <Button
        android:id="@+id/PrayerCounterbtn"
        android:layout_width="166sp"
        android:layout_height="178sp"
        android:background="@drawable/round_buttonclear"
        android:onClick="PrayerCounter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698"
        tools:ignore="InvalidId,OnClick">

    </Button>

    <Button
        android:id="@+id/Clearbtn"
        android:layout_width="64sp"
        android:layout_height="59sp"
        android:background="@drawable/round_button"
        android:onClick="Clear"
        android:text="@string/clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/PrayerCounter"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="@+id/PrayerCounter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482"
        tools:ignore="InvalidId">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>