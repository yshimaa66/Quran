<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Surahs_List">






    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scaleType="centerInside"
        android:background="@null"

        tools:ignore="MissingConstraints">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scaleType="centerInside"

        android:background="@color/colorbc"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/readbtn"
            android:background="@drawable/ic_read"
            android:layout_width="50sp"
            android:layout_height="50sp"/>


        <TextView
            android:id="@+id/TextViewSurah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:text="@string/Heading"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:fontFamily="@font/amiribold"
            android:textColor="@color/colortext"
            android:scaleType="centerInside"
            android:textAlignment="center"


            >

        </TextView>



        <Button
            android:id="@+id/recitebtn"
            android:layout_marginLeft="5sp"
            android:background="@drawable/ic_recite"
            android:layout_width="50sp"
            android:layout_height="50sp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>




</androidx.constraintlayout.widget.ConstraintLayout>